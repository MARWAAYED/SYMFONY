<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
        
            <link rel= "stylesheet" href="/css/bootstap.min.css">
            <link rel= "stylesheet" href="/css/app.css">
            {{ encore_entry_link_tags('app') }}

        {% endblock %}

        {% block javascripts %}
            <script src= "/js/jquery.min.js"></script>
             <script src= "/js/bootstrap.min.js"></script>
              <script src= "/js/popper.min.js"></script>
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
        
    </head>
    <body>
            <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
                <div class="container-fluid">
                    <a class="navbar-brand" href="{{ path('homepage') }}">SymBNB !</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                    </button>

                    <div class="collapse navbar-collapse" id="navbarColor01">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                        <a class="nav-link active" href="{{ path('homepage') }}">Home
                            <span class="visually-hidden">(current)</span>
                        </a>
                        </li>
                        <li class="nav-item">
                        <a class="nav-link active" href="{{ path('ads_index') }}">Les annances
                            <span class="visually-hidden">(current)</span>
                        </a>
                        </li>
                    </ul>
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item">
                            <a href="#" class="nav-link">Mon compte</a>
                        </li>
                    </ul>
                    </div>
                </div>
            </nav>

            {% block body %}{% endblock %}
    </body>
</html>
